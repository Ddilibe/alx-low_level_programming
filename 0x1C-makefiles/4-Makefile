CC := gcc
SRC := main.c school.c
OBJ := ${SRC:%.c=%.o}
NAME := school
RM := rm
CFLAGS := -Wall -Werror -Wextra -pedantic
all: ${OBJ}
	${CC} ${CFLAGS} ${OBJ} -o ${NAME}

clean:
	${RM} -f ${wildcard *~} ${NAME}

oclean:
	${RM} -f ${wildcard *.o}

fclean:
	${RM} -f ${wildcard *~} ${NAME}
	${RM} -f ${wildcard *.o} ${NAME}

re: oclean all
